<body class="theme-redblack">
 <main class="content">
    @RenderBody()
</main>

<footer class="site-footer">
    <p>&copy; @DateTime.Now.Year Car Cleanz — Farmfresh meet carwash? No, but we clean cars ??</p>
</footer>
</body>
</html>
